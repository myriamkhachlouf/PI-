{% extends 'base.html.twig' %}

{% block title %}Entretien{% endblock %}

{% block content %}
    <h1>Entretien</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entretien.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entretien.date ? entretien.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Horaire</th>
                <td>{{ entretien.horaire ? entretien.horaire|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ entretien.lieu }}</td>
            </tr>
            <tr>
                <th>Confirmation</th>
                <td>{{ entretien.confirmation ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ entretien.etat ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('entretien_index') }}">back to list</a>

    <a href="{{ path('entretien_edit', {'id': entretien.id}) }}">edit</a>

    {{ include('entretien/_delete_form.html.twig') }}
{% endblock %}
