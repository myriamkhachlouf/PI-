{% if app.user %}
<script>
    var pubID = "{{- publication.id -}}";
    var userID = "{{- app.user.id -}}";
    var settings = {
        "url": "http://127.0.0.1:8000/publication/views/"+pubID+"/"+userID,
        "method": "GET",
        "timeout": 0,
    };

    setInterval(function(){

        $.ajax(settings).done(function (result) {
            if (result) {
                $("#numberOfViews").text(result.views);
            }});
    }, 5000);

</script>
